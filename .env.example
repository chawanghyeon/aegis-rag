# Application
APP_NAME=AEGIS-RAG
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Database
DATABASE_URL=postgresql+asyncpg://aegis:aegis_password@localhost:5432/aegis_rag
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral:7b

# Embedding
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-0.6B
EMBEDDING_DIMENSION=1024
EMBEDDING_BATCH_SIZE=16
EMBEDDING_DEVICE=cpu

# Retrieval
VECTOR_SEARCH_TOP_K=10
BM25_TOP_K=10
HYBRID_SEARCH_ALPHA=0.5
MIN_CONFIDENCE_THRESHOLD=0.7

# Document Processing
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,docx,txt,md,xlsx,pptx
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY_EXPIRY_DAYS=365
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_PER_SECOND=10
RATE_LIMIT_BURST=20

# Usage & Billing
DEFAULT_MONTHLY_QUOTA_USD=100.00
EMBEDDING_COST_PER_1K_TOKENS=0.0001
QUERY_COST_PER_1K_TOKENS=0.002

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Development
RELOAD_ON_CHANGE=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
